<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tableHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp">

                <TextView
                    android:text="Philippines"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="28%"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="80sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Influenza Type: A(H1)"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Dec 07 - Dec 13"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/panel_square"
                android:layout_margin="16dp"
                android:elevation="4dp">
                <TextView
                    android:id="@+id/titleOtherType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Types of Influenza"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp" />

                <View
                    android:id="@+id/dividerLineOtherType"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/titleOtherType"
                    android:background="#ffffff"
                    />

                <TableLayout
                    android:id="@+id/otherTypeTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dividerLineOtherType"
                    android:layout_marginTop="12dp"
                    android:stretchColumns="*">
                    <TableRow android:gravity="center" android:paddingBottom="8dp">
                        <LinearLayout android:orientation="vertical" android:gravity="center" android:padding="3dp">
                            <TextView android:text="A" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <ImageView android:src="@drawable/virus_image" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" />
                            <TextView android:text="28%" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:gravity="center" android:padding="3dp">
                            <TextView android:text="A(H3)" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <ImageView android:src="@drawable/virus_image" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" />
                            <TextView android:text="28%" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:gravity="center" android:padding="3dp">
                            <TextView android:text="A(H1N1)" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <ImageView android:src="@drawable/virus_image" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" />
                            <TextView android:text="29%" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:gravity="center" android:padding="3dp">
                            <TextView android:text="B" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <ImageView android:src="@drawable/virus_image" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" />
                            <TextView android:text="30%" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:gravity="center" android:padding="3dp">
                            <TextView android:text="B(Yamagata)" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <ImageView android:src="@drawable/virus_image" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" />
                            <TextView android:text="31%" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:gravity="center" android:padding="3dp">
                            <TextView android:text="B(Victoria)" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <ImageView android:src="@drawable/virus_image" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" />
                            <TextView android:text="30%" android:textColor="#FFFFFF" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/monthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/panel_square"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">
                <Spinner
                    android:id="@+id/monthSelection"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp" />

                <View
                    android:id="@+id/monthDividerLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/monthSelection"
                    android:background="#ffffff" />

                <TableLayout
                    android:id="@+id/monthInfoTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/monthDividerLine"
                    android:layout_marginTop="12dp"
                    android:stretchColumns="3">
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="Week 1" android:textColor="#FFFFFF" />
                        <ImageView android:id="@+id/imageView1" android:layout_width="47dp" android:layout_height="29dp" app:srcCompat="@drawable/virus_image" />
                        <TextView android:id="@+id/subtypeW1" android:paddingEnd="8dp" android:text="A(H3)" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/seekBarW1" android:layout_width="0dp" android:layout_height="wrap_content" android:clickable="false" android:contextClickable="false" android:focusable="false" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/percentW1" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="Week 2" android:textColor="#FFFFFF" />
                        <ImageView android:id="@+id/imageView2" android:layout_width="47dp" android:layout_height="29dp" app:srcCompat="@drawable/virus_image" />
                        <TextView android:id="@+id/subtypeW2" android:paddingEnd="8dp" android:text="A(H1)" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/seekBarW2" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/percentW2" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="Week 3" android:textColor="#FFFFFF" />
                        <ImageView android:id="@+id/imageView3" android:layout_width="47dp" android:layout_height="29dp" app:srcCompat="@drawable/virus_image" />
                        <TextView android:id="@+id/subtypeW3" android:paddingEnd="8dp" android:text="B (Yamagata)" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/seekBarW3" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/percentW3" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="Week 4" android:textColor="#FFFFFF" />
                        <ImageView android:id="@+id/imageView4" android:layout_width="47dp" android:layout_height="29dp" app:srcCompat="@drawable/virus_image" />
                        <TextView android:id="@+id/subtypeW4" android:paddingEnd="8dp" android:text="A(H3)" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/seekBarW4" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/percentW4" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/panel_square"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/panelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Peak Outbreak Per Subtype (2026)"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/dividerLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/panelTitle"
                    android:background="#ffffff" />

                <TableLayout
                    android:id="@+id/infoTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dividerLine"
                    android:layout_marginTop="12dp"
                    android:stretchColumns="3">
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="A" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Dec" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Week 1" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/SeekBar_A" android:layout_width="0dp" android:layout_height="wrap_content" android:clickable="false" android:contextClickable="false" android:focusable="false" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/PeakPercent_A" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="A(H1)" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Nov" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Week 3" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/SeekBar_A_H1" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/PeakPercent_A_H1" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="A(H1N1)pdm09" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Dec" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Week 1" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/SeekBar_A_H1N1" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/PeakPercent_A_H1N1" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="A(H3)" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Dec" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Week 1" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/SeekBar_A_H3" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/PeakPercent_A_H3" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="B" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Dec" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Week 1" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/SeekBar_B" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/PeakPercent_B" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="B(Victoria)" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Dec" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Week 1" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/SeekBar_B_Vic" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/PeakPercent_B_Vic" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                    <TableRow android:gravity="center_vertical" android:paddingBottom="8dp">
                        <TextView android:paddingEnd="8dp" android:text="B(Yamagata)" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Dec" android:textColor="#FFFFFF" />
                        <TextView android:paddingEnd="8dp" android:text="Week 1" android:textColor="#FFFFFF" />
                        <SeekBar android:id="@+id/SeekBar_B_Yam" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="31" android:progressDrawable="@drawable/gradient_seekbar_style" android:splitTrack="false" android:thumbTint="#FFFFFF" />
                        <TextView android:id="@+id/PeakPercent_B_Yam" android:paddingStart="8dp" android:text="31%" android:textColor="#FFFFFF" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>