<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/monthLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/panel_square"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/monthSelection"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp" />

        <View
            android:id="@+id/monthDividerLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/monthSelection"
            android:background="#ffffff" />

        <TableLayout
            android:id="@+id/monthInfoTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/monthDividerLine"
            android:layout_marginTop="12dp"
            android:stretchColumns="3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 1"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/virus_image" />

                <TextView
                    android:id="@+id/subtypeW1"
                    android:paddingEnd="8dp"
                    android:text="A(H3)"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/seekBarW1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:focusable="false"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/percentW1"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 2"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/virus_image" />

                <TextView
                    android:id="@+id/subtypeW2"
                    android:paddingEnd="8dp"
                    android:text="A(H1)"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/seekBarW2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/percentW2"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 3"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/virus_image" />

                <TextView
                    android:id="@+id/subtypeW3"
                    android:paddingEnd="8dp"
                    android:text="B (Yamagata)"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/seekBarW3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/percentW3"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 4"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/virus_image" />

                <TextView
                    android:id="@+id/subtypeW4"
                    android:paddingEnd="8dp"
                    android:text="A(H3)"
                    android:textColor="#FFFFFF" />


                <SeekBar
                    android:id="@+id/seekBarW4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/percentW4"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/panel_square"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthLayout">

        <TextView
            android:id="@+id/panelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Peak Outbreak Per Subtype (2026)"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <View
            android:id="@+id/dividerLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/panelTitle"
            android:background="#ffffff" />

        <TableLayout
            android:id="@+id/infoTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividerLine"
            android:layout_marginTop="12dp"
            android:stretchColumns="3">

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="A"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Dec"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 1"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/SeekBar_A"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:focusable="false"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/PeakPercent_A"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="A(H1)"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Nov"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 3"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/SeekBar_A_H1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/PeakPercent_A_H1"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="A(H1N1)pdm09"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Dec"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 1"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/SeekBar_A_H1N1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/PeakPercent_A_H1N1"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="A(H3)"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Dec"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 1"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/SeekBar_A_H3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/PeakPercent_A_H3"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="B"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Dec"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 1"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/SeekBar_B"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/PeakPercent_B"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="B(Victoria)"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Dec"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 1"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/SeekBar_B_Vic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/PeakPercent_B_Vic"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:paddingEnd="8dp"
                    android:text="B(Yamagata)"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Dec"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:paddingEnd="8dp"
                    android:text="Week 1"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/SeekBar_B_Yam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="31"
                    android:progressDrawable="@drawable/gradient_seekbar_style"
                    android:splitTrack="false"
                    android:thumbTint="#FFFFFF" />

                <TextView
                    android:id="@+id/PeakPercent_B_Yam"
                    android:paddingStart="8dp"
                    android:text="31%"
                    android:textColor="#FFFFFF" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>